<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TravelActivity"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/checkInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="@string/check_in_text" />

    <LinearLayout
        android:id="@+id/checkInLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkInText"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/checkInEdit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/positionInButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/position" />

        <Button
            android:id="@+id/selectInButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/select" />

        <Button
            android:id="@+id/checkInButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/check_in_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/checkOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkInLayout"
        android:layout_marginLeft="100dp"
        android:text="@string/check_out_text" />


    <LinearLayout
        android:id="@+id/checkOutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkOutText"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/checkOutEdit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:enabled="false" />

        <Button
            android:id="@+id/positionOutButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/position"
            android:enabled="false"/>

        <Button
            android:id="@+id/selectOutButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/select" />

        <Button
            android:id="@+id/checkOutButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/check_out_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/trainImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/train"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/checkOutLayout"/>
</RelativeLayout>
